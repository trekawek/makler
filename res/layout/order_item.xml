<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:layout_width="72dip"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/orderItemSymbol"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#ffaa56" android:paddingTop="7dip" android:text="GPW"
			android:textSize="28dip" android:paddingRight="10dip"></TextView>
		<TextView android:text="Karen" android:id="@+id/orderItemName"
			android:paddingTop="41dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="10dip"
			android:textColor="#0099CC" android:paddingLeft="2dip"></TextView>
	</RelativeLayout>

	<TableLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="5dip"
		android:gravity="center_vertical">
		<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Typ: "
				android:textColor="#ffffff" android:textSize="10dip">
			</TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="sprzedaj"
				android:textColor="#ffffff" android:textSize="12dip" android:id="@+id/orderItemTyp"
				android:paddingRight="15dip">
			</TextView>

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Limit ceny: "
				android:textColor="#ffffff" android:textSize="10dip">
			</TextView>
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="3,24"
				android:textColor="#ffffff" android:textSize="12dip" android:id="@+id/orderItemLimit">
			</TextView>
		</TableRow>
		<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Zrealizowano: "
				android:textColor="#ffffff" android:textSize="10dip">
			</TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="32 / 56" android:paddingRight="15dip"
				android:textColor="#ffffff" android:textSize="12dip" android:id="@+id/orderItemIlosc">
			</TextView>
			
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Data sesji: "
				android:textColor="#ffffff" android:textSize="10dip">
			</TextView>
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="2010-08-21 "
				android:textColor="#ffffff" android:textSize="12dip"
				android:id="@+id/orderItemDataSesji">
			</TextView>
		</TableRow>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
				<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Stan: "
				android:textColor="#ffffff" android:textSize="10dip">
				</TextView>
				<TextView android:layout_width="fill_parent" android:layout_span="3"
				android:layout_height="wrap_content" android:text="zrealizowane i anulowane "
				android:textColor="#ffffff" android:textSize="12dip"
				android:paddingRight="10dip" android:id="@+id/orderItemStan">
				</TextView>
		</LinearLayout>
	</TableLayout>
</LinearLayout>