<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/quotesLinearLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	xmlns:app="http://schemas.android.com/apk/res/pl.net.newton.Makler"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads">

	<Button android:text="Dodaj transakcję" android:id="@+id/addTransButton"
		android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:text="Konto: " android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="12dip"
			android:gravity="right" android:paddingLeft="3dip"></TextView>
		<TextView android:id="@+id/walletAccount" android:text="1,12"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="3dip"></TextView>
		<TextView android:text="Łączny zysk: " android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="12dip"
			android:gravity="right" android:paddingLeft="20dip"></TextView>
		<TextView android:id="@+id/walletGain" android:text="2,23"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="3dip"></TextView>
	</LinearLayout>

	<!-- <View android:layout_width="fill_parent" android:layout_height="1dip" 
		android:background="#A0A0A0" android:layout_marginTop="2dip"/> -->

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ListView android:id="@+id/walletListView"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_marginBottom="51dip">
		</ListView>

	</RelativeLayout>

	<com.google.ads.AdView android:id="@+id/ad"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_below="@id/walletListView" android:layout_marginTop="-51dip"
		ads:adUnitId="a14cb03ac5db23f" ads:adSize="BANNER" ads:loadAdOnCreate="false" />

</LinearLayout>