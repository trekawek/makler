<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quotesLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/addTransButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_transaction" >
    </Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="3dip"
            android:text="@string/account"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/walletAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:text="@string/float_placeholder" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="20dip"
            android:text="@string/total_gain"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/walletGain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:text="@string/float_placeholder" >
        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/walletListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </ListView>
    </RelativeLayout>
</LinearLayout>