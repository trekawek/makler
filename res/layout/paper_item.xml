<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
  android:layout_width="fill_parent"
  android:paddingLeft="5dip">
  
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" >
      <TextView android:id="@+id/paperItemSymbol" android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:textColor="#ffaa56" android:paddingTop="7dip"
      android:text="KAR" android:textSize="30dip" android:paddingRight="10dip"></TextView>
      <TextView android:text="Karen" android:id="@+id/paperItemName" android:paddingTop="41dip"
      android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10dip"
      android:textColor="#0099CC" android:paddingLeft="2dip"></TextView> 
    </RelativeLayout>
    
    <LinearLayout android:layout_height="fill_parent" android:gravity="left" android:layout_width="fill_parent">
        <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="5dip" android:gravity="center_vertical">
        	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
        		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        		android:text="Prawa własności:" android:textColor="#ffffff" android:textSize="10dip">
        		</TextView>
        		
        		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        		android:text="32" android:textColor="#ffffff" android:textSize="12dip" android:id="@+id/paperItemOwnership">
        		</TextView>
        	</TableRow>
        	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
        		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        		android:text="Aktualny kurs:" android:textColor="#ffffff" android:textSize="10dip">
        		</TextView>
        		
        		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        		android:text="32" android:textColor="#ffffff" android:textSize="12dip" android:id="@+id/paperItemQuote">
        		</TextView>
        	</TableRow>
        	<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
        		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        		android:text="Wartość akcji:" android:textColor="#ffffff" android:textSize="10dip">
        		</TextView>
        		
        		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        		android:text="32" android:textColor="#ffffff" android:textSize="12dip" android:id="@+id/paperItemValue">
        		</TextView>
        	</TableRow>
        </TableLayout>
        
        <TextView android:id="@+id/paperItemQuantity" android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:gravity="right" android:textColor="#FFFFFF" android:text="54" android:textSize="30dip"
        android:paddingTop="7dip" android:paddingRight="10dip"></TextView>
        
    </LinearLayout>
  </LinearLayout>