<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/quotesLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/noQuotes"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="5dip"
        android:text="@string/no_quotes"
        android:visibility="gone" >
    </TextView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/quotesListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="51dip" >
        </ListView>
    </RelativeLayout>

    <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-51dip"
        ads:adSize="BANNER"
        ads:adUnitId="a14cb03ac5db23f"
        ads:loadAdOnCreate="false" />

</LinearLayout>